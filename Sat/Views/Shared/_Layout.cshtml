<!DOCTYPE html>
@inject IHttpContextAccessor httpContextAccessor
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using Microsoft.AspNetCore.Http;
<html lang="ru">
<head>

    <meta charset="utf-8" />
    <meta name="viewport"  />
    <title>@ViewData["Title"] - Task4Core</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        @{
            var theme = httpContextAccessor.HttpContext.Request.Cookies["theme"] != null ? httpContextAccessor.HttpContext.Request.Cookies["theme"].ToString() : "Light";
            if (theme == "Light")
            {

                <link href="~/css/site.css" rel="stylesheet" />
            }
            else
            {

                <link href="~/css/site-dark.css" rel="stylesheet" />
            }
        }

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>


<body>
   
    <header>
        <nav class="navbar  navbar-expand-lg  navbar-f  border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Collections" asp-action="ExportToCSV">WebApplication1</a>
                <button  class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbar-collapse" aria-expanded="false" aria-label="Toggle navigation">
                     <span class=" navbar-toggler-icon "></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <partial name="_layoutPartial" />
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <partial name="_CulturePartial" />
                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>




    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

