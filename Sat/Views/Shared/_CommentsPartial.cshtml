@model IEnumerable<Task4Core.Models.CommentModel>

<style>
    table {
      width:100%;
       
        border-collapse: collapse;
        border: 1px solid black;
    }
        table tr td {
            word-break: break-all;
        }
</style>
    <table >
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td width="90%">
                        @s.UserId
                        :
                        @s.Comment
                    </td>
                    <td align="right">
                        @if (s.LikesUser==null||!s.LikesUser.Contains("/"+User.Identity.Name+"/"))
                        {
                        <form asp-action="LikeComm" asp-controller="Collections" asp-route-id=@s.Id method="post">
                            <button type="submit" class="btn btn-sm btn-success">
                                Like
                            </button>
                        </form>
                        }
                        else
                        {
                            <form asp-action="ResetLikeComm" asp-controller="Collections" asp-route-id=@s.Id method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Like
                                </button>
                            </form>
                        }
                    </td>
                </tr>
            }
            </tbody>
        

    </table>
   


