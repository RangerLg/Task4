@using Microsoft.AspNetCore.Identity
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form class="form-inline" asp-controller="Account" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button type="submit" class="nav-link btn btn-link">@localizer["Logout"] </button>

        </form>
    </li>
}
else
{
<li class="nav-item " >
    <a class="nav-link" asp-controller="Account" asp-action="Register">@localizer["Register"]</a>
</li>
<li class="nav-item ">
    <a class="nav-link" asp-controller="Account" asp-action="Login">@localizer["Login"]</a>
</li>
}