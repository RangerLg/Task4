@model IEnumerable<Task4Core.Models.Collection>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<form class="example" asp-action="Index" method="post">
    <div class="row">
        <div class="col-md-6">
            <select name="Topic" class="select-css" style="float:left" ;>
                <option selected disabled>@localizer["Choose a topic"]</option>
                <option value="">@localizer["All"]</option>
                <option value="Books">@localizer["Books"]</option>
                <option value="Alcohol">@localizer["Alcohol"]</option>
                <option value="Cars">@localizer["Cars"]</option>
            </select>
        </div>
        <div class="col-md-6">
            <div class="form-action no-color">
                <p>
                    <button type="submit" a><i class="fa fa-search"></i></button>
                    <input class="input-css" type="text" placeholder=@localizer["Find by name"]  name="searchString" value=@ViewData["CurrentFilter"] />
                </p>
            </div>
        </div>
    </div>
</form>

<table class="table-css">
    <thead>
        <tr>
            <th class="th-css">
                <a asp-controller="Collections" asp-action="Index" asp-route-sortOrder=@ViewBag.NameSortParm asp-route-searchString=@ViewData["CurrentFilter"]>@localizer["CollectionName"]</a>
            </th>

            <th class="th-css">
                <a asp-controller="Collections" asp-action="Index" asp-route-sortOrder=@ViewBag.ItemSortParm asp-route-searchString=@ViewData["CurrentFilter"]>@localizer["ItemCount"]</a>
            </th>

            <th class="th-css">
                <a asp-controller="Collections" asp-action="Index" asp-route-sortOrder=@ViewBag.LikeSortParm asp-route-searchString=@ViewData["CurrentFilter"]>@localizer["LikeCount"]</a>
            </th>
            <th class="th-css">

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td class="td-css">
                    @item.CollectionName
                </td>
                <td class="td-css">
                    @item.ItemCount
                </td>
                <td class="td-css">
                    @item.LikeCount
                </td>

                <td class="td-css" align="right" width=10%>
                    <form asp-controller="Collections" asp-action="CollectionPage" asp-route-CollectionId=@item.ID>
                        <button type="submit" name="CollectionId"  class="btn-more" value=@item.ID>
                            @localizer["More"]
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="ui-widget">
    <input type="hidden" id="hfCustomer" name="CustomerId" />
</div>

