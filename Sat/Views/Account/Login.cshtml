@model Sat.ViewModels.LoginViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

<div class="row">
    <div class="col-md-6">
        <h2>@localizer["Login"]</h2>
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly"></div>
            <div>
                <label asp-for="Email" >@localizer["Email"]</label><br />
                <input asp-for="Email" />
                <span asp-validation-for="Email"></span>
            </div>
            <div>
                <label asp-for="Password">@localizer["Password"]</label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
            <div>
                <label asp-for="RememberMe">@localizer["Remember me"]</label>
                <input asp-for="RememberMe" />
            </div>
            <div>
                <input type="submit"  value=@localizer["Enter"] />
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <h2>@localizer["External Login"]</h2>
        <hr />
        @{


            <form method="post" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl">
                <div>

                    <button type="submit" class="btn btn-primary"
                            name="provider" value="Facebook"
                            title="Login usin your Facebook account">
                        Facebook
                    </button>


                    <button type="submit" class="btn btn-primary"
                            name="provider" value="Google"
                            title="Login usin your Google account">
                        Google
                    </button>


                </div>
            </form>

        }
    </div>
</div>
